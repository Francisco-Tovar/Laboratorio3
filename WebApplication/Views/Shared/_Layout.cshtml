<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CenfoBanco</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Content/Chart.min.js"></script>

    <script src="~/Scripts/Views/ControlActions.js"></script>


</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <div style="text-align:center; display:block; margin-right: 0px;">
                <img src="~/Content/imgs/cenfobancoIcon2.png" />
            </div>
            <a href="../home" class="navbar-brand" style="font-size:2rem; margin-right:1rem;">enfoBanco</a>
            <a href="../home/vClientes" class="navbar-brand ">Clientes</a>
            <a href="../home/vCuentas" class="navbar-brand ">Cuentas</a>
            <a href="../home/vCreditos" class="navbar-brand ">Creditos</a>
            <a href="../home/vDirecciones" class="navbar-brand">Direcciones</a>
            <a href="../home/vMovimientos" class="navbar-brand ">Movimientos en Cuentas</a>
            <a href="../home/vPagos" class="navbar-brand ">Pagos de Creditos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Reportes <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="Consultas">
                            @Html.ActionLink("Listar Movimientos en Cuentas", "vListarMovimientos", "Home", new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Listar Pagos en Creditos", "vListarPagos", "Home", new { @class = "dropdown-item" })
                        </div>
                </ul>
                @*<ul class="nav navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" href="https://www.google.com/">Salir</a>
                </li>
            </ul>*@
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
            <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
            <span id="alert_message"></span>
        </div>
        @RenderBody()
        <hr />

    </div>
</body>
@*<script>
        $(document).ready(function () {
            $('.alert').hide();
        });
    </script>*@
</html>
